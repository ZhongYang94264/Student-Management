<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_select_login"
    android:orientation="vertical"
    android:paddingTop="150dp"
    tools:context=".SelectLoginActivity">

    <!-- 管理员部分 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_admin_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/icon_admin_head" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/text_admin"
            android:textColor="@color/colorAdmin"
            android:textSize="20sp" />

    </LinearLayout>

    <!--  教师部分  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_teacher_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/icon_teacher_head" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/text_teacher"
            android:textColor="@color/colorTeacher"
            android:textSize="20sp" />

    </LinearLayout>

    <!--  学生部分  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_student_head"
            android:layout_width="100dp"
            android:layout_height="99dp"
            android:src="@mipmap/icon_student_head" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/text_student"
            android:textColor="@color/colorStudent"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>