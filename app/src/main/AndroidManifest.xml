<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zyapp.sm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- 学生管理 -->
        <activity
            android:name=".ui.student.StudentActivity"
            android:label="@string/student">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <!-- 修改密码 -->
        <activity
            android:name=".ui.student.ModificationActivity"
            android:label="@string/student" >


        </activity>
        <!-- 个人信息 -->
        <activity
            android:name=".ui.student.InformationActivity"
            android:label="@string/student" />
        <!-- 我的作业 -->
        <activity
            android:name=".ui.student.WorkActivity"
            android:label="@string/student" />
        <!-- 我的课程 -->
        <activity
            android:name=".ui.student.CourseActivity"
            android:label="@string/student" />

        <!-- 注册 -->
        <activity android:name=".ui.StudentLoginActivity" />
        <activity android:name=".ui.TeacherLoginActivity" />
        <activity android:name=".ui.AdminLoginActivity" />

        <!-- 开始 -->
        <activity android:name=".ui.StartActivity">

